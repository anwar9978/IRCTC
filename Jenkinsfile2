pipeline {
    agent any

    environment {
        PATH = "/opt/maven/bin:$PATH"
    }

    stages {

        stage('Git Clone') {
            steps {
                git url: 'https://github.com/anwar9978/IRCTC.git', branch: 'main'
            }
        }

        stage('Build & Test') {
            steps {
                echo 'Build + Test started'
                sh 'mvn clean verify'
                echo 'Build + Test completed'
            }
        }

        stage('SonarCloud Analysis') {
            steps {
                withSonarQubeEnv('Anwar_SQ') {
                    sh 'mvn sonar:sonar -Dsonar.organization=anwar997 -Dsonar.projectKey=anwar997_anwar'
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
